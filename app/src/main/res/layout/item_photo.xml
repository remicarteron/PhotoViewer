<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_margin="@dimen/thumb_margin"
                                                   android:background="@color/colorPrimaryDark"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="@dimen/thumb_size">

    <!-- Thumb (fill all parent space -->
    <ImageView android:id="@+id/pv_item_image_thumb" android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="centerCrop"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:contentDescription="@string/thumb"/>

    <!-- Title centered -->
    <TextView android:id="@+id/pv_item_text_title" android:layout_width="wrap_content"
              style="@style/PhotoViewer.thumbTitle"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
